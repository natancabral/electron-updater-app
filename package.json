{
  "name": "electron-updater-app",
  "version": "1.0.0",
  "description": "Electron Updater App - Description",
  "author": {
    "name": "Natan Cabral",
    "email": "natancabral@hotmail.com"
  },
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/natancabral/electron-updater-app.git"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron . APP_DEV=true",
    "start:prod": "electron . APP_DEV=false",
    "deploy": "electron-builder build --publish always",
    "build": "electron-builder build --publish never",
    "build:win": "electron-builder build --win --publish never",
    "build:linux": "electron-builder build --linux --publish never",
    "build:all": "electron-builder build --win --linux --mac --publish never"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^14.0.0",
    "electron-builder": "^22.11.7"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^4.3.9"
  },
  "build": {
    "asar": true,
    "extends": null,
    "appId": "com.natancabral.${name}",
    "compression": "maximum",
    "productName": "Electron Updater App PN",
    "publish": [{
      "provider": "github",
      "url": "https://github.com/natancabral/electron-updater-app"
    }],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "./assets/ico/icon.ico"
    },
    "msi": {
      "shortcutName": "Electron Updater App MSI",
      "artifactName":"${name}-Setup-${version}.${ext}"
    },
    "nsis": {
      "shortcutName": "Electron Updater App NSIS",
      "artifactName":"${name}-Setup-${version}.${ext}",
      "installerIcon": "./assets/ico/icon.ico",
      "oneClick": true,
      "perMachine": true,
      "allowElevation": true,
      "runAfterFinish": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": true,
      "allowToChangeInstallationDirectory": false
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "./assets/ico/mac512.icns",
      "category": "public.app-category.graphics-design"
    },
    "dmg": {
      "shortcutName": "Electron Updater App DMG",
      "artifactName":"${name}-Setup-${version}.${ext}",
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "icon": "./assets/ico/mac512.icns"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Development"
    },
    "deb": {
      "shortcutName": "Electron Updater App DEB",
      "artifactName":"${name}-Setup-${version}.${ext}"
    },
    "directories": {
      "buildResources": "./",
      "output": "dist"
    },
    "files": [
      "package.json",
      "assets/**/*",
      "main.js",
      "preload.js"
    ]
  }
}
