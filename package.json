{
  "name": "electron-updater-app",
  "version": "1.0.7",
  "description": "Electron Updater App - Description",
  "author": {
    "name": "Natan Cabral",
    "email": "natancabral@hotmail.com"
  },
  "website": "http://www.gnnc.com.br",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/natancabral/electron-updater-app.git"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron . APP_DEV=true",
    "start:prod": "electron . APP_DEV=false",
    "deploy": "electron-builder build --publish always",
    "build": "electron-builder build --publish never",
    "build:win": "electron-builder build --win --publish never",
    "build:linux": "electron-builder build --linux --publish never",
    "build:all": "electron-builder build --win --linux --mac --publish never"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^14.0.0",
    "electron-builder": "^22.11.7"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "electron-dl": "^3.2.1",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^4.3.9"
  },
  "build": {
    "asar": true,
    "extends": null,
    "appId": "com.natancabral.${name}",
    "compression": "maximum",
    "productName": "Electron Updater App",
    "copyright": "Copyright Â© 2021 ${author}",
    "afterSign": "config/afterSignHook.js",
    "publish": [
      {
        "provider": "github",
        "owner": "natancabral",
        "repo": "electron-updater-app",
        "url": "https://github.com/natancabral/electron-updater-app"
      }
    ],
    "win": {
      "target": [
        "msi",
        "nsis",
        "portable"
      ],
      "verifyUpdateCodeSignature": false,
      "icon": "./assets/ico/icon.ico"
    },
    "nsis": {
      "shortcutName": "${productName}",
      "artifactName": "${name}-Setup-${version}.${ext}",
      "installerIcon": "./assets/ico/icon.ico",
      "oneClick": true,
      "perMachine": true,
      "allowElevation": true,
      "runAfterFinish": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": true,
      "allowToChangeInstallationDirectory": false
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "./assets/ico/mac512.icns",
      "category": "public.app-category.graphics-design",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "artifactName": "${name}-Setup-${version}.${ext}",
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "icon": "./assets/ico/mac512.icns"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Development"
    },
    "deb": {
      "artifactName": "${name}-Setup-${version}.${ext}"
    },
    "directories": {
      "buildResources": "./assets",
      "output": "./dist",
      "app": "./"
    },
    "files": [
      "assets/**/*",
      ".env",
      "*.html",
      "*.js",
      "*.css"
    ]
  }
}
